#include <iostream>
#include <vector>
using namespace std;


int main()
{
	int permentCost;
	int costPerWork;
	int priceOfLap;
	cin >> permentCost >> costPerWork >> priceOfLap;
	
	if (costPerWork > priceOfLap || costPerWork == priceOfLap)
		cout << -1;
	else {
		cout << permentCost / (priceOfLap - costPerWork) + 1;
	}
    return 0;
}
