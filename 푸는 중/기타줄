//#include <stdio.h>
#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
#include <numeric>
#define _CRT_SECURE_NO_WARNINGS
using namespace std;

int main()
{
	vector <int> set;
	vector <int> sep;
	int n;
	int m;
	long long totalprice=0;
	cin >> n >> m;
	for (int i = 0; i < m; i++)
	{
		int set_temp, sep_temp;
		cin >> set_temp >> sep_temp;

		set.emplace_back(set_temp);
		sep.emplace_back(sep_temp);
	}
	sort(set.begin(), set.end());
	sort(sep.begin(), sep.end());
	if ((sep[0] * n) < (set[0] * n / 6))
	{
		totalprice = sep[0] * n;
		n = 0;
	}
	
	if (n >= 6)
	{
		totalprice = n / 6 * set[0];
		n = n % 6;
		if ((n % 6 * sep[0]) > set[0])
		{
			totalprice += set[0];
			n = 0;
		}
	}
	if (n < 6 && n!=0)
	{
		totalprice += n % 6 * sep[0];
	}
	cout << totalprice;
}

